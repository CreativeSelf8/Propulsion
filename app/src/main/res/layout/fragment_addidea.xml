<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical"
    android:layout_weight="10">

    <EditText
        android:layout_weight="1"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:id="@+id/edt_addidea_title"
        android:layout_marginTop="20dp"
        android:background="@color/bg_account"
        android:hint="Title"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_addidea_category"
        android:layout_height="0dp"
        android:weightSum="7">

        <EditText
            android:layout_weight="6"
            android:layout_width="0dp"
            android:id="@+id/edt_addidea_tag"
            android:layout_marginTop="5dp"
            android:background="@color/bg_account"
            android:hint="Tag"
            android:textSize="20sp"
            android:padding="5dp"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:layout_height="match_parent" />

        <Button
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/btn_addidea_add_file"
            android:layout_marginLeft="10dp"
            android:scaleType="center"
            android:background="@drawable/ic_attach_file_black_24dp"
            android:layout_height="40dp"></Button>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="15dp">

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gv_addidea"
            android:horizontalSpacing="5dp"></GridView>
    </HorizontalScrollView>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edt_addidea_desciption"
        android:layout_marginTop="15dp"
        android:gravity="top"
        android:padding="5dp"
        android:textSize="20sp"
        android:background="@color/bg_account"
        android:hint="Description"
        android:layout_weight="6"
        android:layout_height="0dp"
        android:ellipsize="end" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="0dp"
        android:gravity="center_vertical">

        <Button
            android:layout_width="50dp"
            android:backgroundTint="@null"
            android:id="@+id/btn_addidea_delete"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_trash"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="0dp"
            android:id="@+id/btn_addidea_save_as_draft"
            android:layout_marginLeft="10dp"
            android:text="Save as draft"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_save_as_draft"
            android:layout_weight="1"
            android:layout_height="40dp" />

        <Button
            android:layout_width="0dp"
            android:id="@+id/btn_addidea_submit_idea"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Submit idea"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_submit_idea"
            android:layout_weight="1"
            android:layout_height="40dp" />

    </LinearLayout>

</LinearLayout>