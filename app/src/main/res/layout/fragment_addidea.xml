<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:orientation="vertical"
    android:padding="8dp">

    <EditText
        android:id="@+id/edt_addidea_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@color/bg_account"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="Title"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/tv_addidea_category"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="7">

        <EditText
            android:id="@+id/edt_addidea_tag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="6"
            android:background="@color/bg_account"
            android:ellipsize="end"
            android:hint="Tag"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_addidea_add_file"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_attach_file_black_24dp"
            android:scaleType="center"></Button>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gv_addidea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:background="#E8E8E8"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/edt_addidea_desciption"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:background="@color/bg_account"
        android:ellipsize="end"
        android:gravity="top"
        android:hint="Description"
        android:padding="5dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_addidea_delete"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_trash"
            android:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_addidea_save_as_draft"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_save_as_draft"
            android:text="Save as draft"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_addidea_submit_idea"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_submit_idea"
            android:text="Submit idea"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>