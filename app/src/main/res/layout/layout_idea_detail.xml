<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_idea_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_big" />

    <TextView
        android:id="@+id/tv_idea_detail_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:text="date"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/text_size_verysmall" />

    <TextView
        android:id="@+id/tv_idea_detail_likecount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:text="20 people like this"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_verysmall" />

    <TextView
        android:id="@+id/tv_idea_detail_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="Tag"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gv_idea_detail"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:horizontalSpacing="2dp" />

    <TextView
        android:id="@+id/tv_idea_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="20sp" />

</LinearLayout>